@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml";
}
@model Learner
<h1>Delete</h1>

<div>
    <p>Are you sure you want to delete this learner?</p>
    <form asp-controller="Learner" asp-action="Delete" asp-route-id="@Model.LearnerID" method="post" class="mt-3">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>